generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_DATABASE_CONNECTION_STRING")
}

model User {
	id String @id @default(uuid()) // Replace default 'SERIAL' type ID with UUID
	name String
	email String @unique
	usage_reason String?
	privacy_agreement Boolean
	captcha String
	api_key String
}
